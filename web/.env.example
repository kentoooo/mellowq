# MongoDB Atlas Connection String (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mellowq?retryWrites=true&w=majority

# MongoDB Local (Docker) - Development only
# MONGODB_URI=mongodb://admin:password@localhost:27017/mellowq?authSource=admin

# VAPID Keys for Web Push Notifications
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:your-email@example.com